        <script><![CDATA[(function executeRule(current, previous) {

    // Only outbound, system-generated emails that have actually been sent
    if (current.type != 'sent' || current.system_generated != true) {
        return;
    }

    // Email must be tied to an AAYOS Ticket
    if (!current.instance_id) {
        return;
    }

    var ticketId = current.instance_id;
    var ticket = new GlideRecord('x_1868112_aayos_ticket');
    if (!ticket.get(ticketId)) {
        return;
    }

    // Flip customer_notified from false â†’ true (once)
    if (ticket.isValidField('customer_notified') && ticket.customer_notified != true) {
        ticket.customer_notified = true;
        ticket.update();
    }

})(current, previous);
]]></script>
