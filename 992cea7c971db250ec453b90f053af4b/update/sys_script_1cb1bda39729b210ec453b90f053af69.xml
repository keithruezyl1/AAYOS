        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    // Only act when the customer decision has just changed to "declined"
    if (!current.customer_decision.changes())
        return;

    if (current.customer_decision != 'declined')
        return;

    // Optional: only if it was previously pending
    if (previous.customer_decision && previous.customer_decision != 'pending')
        return;

    // Call lifecycle service to:
    //  - set status = cancelled
    //  - stamp customer_decision_date
    //  - recalc technician open tickets
    var svc = new TicketLifecycleService();
    svc.handleDeclinedTicket(current.getUniqueValue());

})(current, previous);
]]></script>
