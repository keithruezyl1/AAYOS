        <script><![CDATA[(function () {
    // AAYOS Admin Knowledge base sys_id
    var kbId = '2a9ad1659725b6d0ec453b90f053af0a';

    data.categories = [];

    var gr = new GlideRecord('kb_category');
    gr.addQuery('kb_knowledge_base', kbId);
    gr.addQuery('active', true);
    gr.orderBy('label');
    gr.query();

    while (gr.next()) {
        data.categories.push({
            value: gr.getUniqueValue(),       // sys_id
            label: gr.getValue('label')       // category name
        });
    }
})();
]]></script>
