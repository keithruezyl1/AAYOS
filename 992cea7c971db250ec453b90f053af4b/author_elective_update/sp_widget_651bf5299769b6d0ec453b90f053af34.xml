        <template><![CDATA[<div class="panel panel-default aayos-kb-categories">
  <div class="panel-heading">
    <h4 class="panel-title">Categories</h4>
  </div>

  <!-- Category list -->
  <div class="panel-body" ng-if="data.categories.length">
    <ul class="list-unstyled aayos-kb-categories__list">
      <li ng-repeat="cat in data.categories | orderBy:'label'">
        <!-- Stay on the AAYOS KB page, pass kb_category in URL -->
        <a href="?id=aayos_admin_kb&kb_category={{cat.value}}">
          {{cat.label}}
        </a>
      </li>
    </ul>
  </div>

  <!-- Empty state -->
  <div class="panel-body" ng-if="!data.categories.length">
    <span>No categories available.</span>
  </div>
</div>
]]></template>
