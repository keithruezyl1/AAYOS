        <script><![CDATA[(function () {
    // AAYOS Admin Knowledge base sys_id
    var kbId = '2a9ad1659725b6d0ec453b90f053af0a';

    data.categories = [];

    var t = new GlideRecord('kb_category');
    // Only categories that belong to AAYOS Admin Knowledge
    t.addQuery('kb_knowledge_base', kbId);
    // Optional: only top-level categories
    t.addQuery('parent_id', '');
    t.addQuery('active', true);
    t.orderBy('label');
    t.query();

    while (t.next()) {
        var category = {
            value: t.getUniqueValue(),     // sys_id
            label: t.getValue('label')     // category name
        };
        data.categories.push(category);
    }
})();
]]></script>
